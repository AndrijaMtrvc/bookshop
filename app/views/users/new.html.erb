<div class="bg-gradient-to-r from-orange-100 to-orange-200 min-h-screen flex flex-col justify-center">
  <div class="bg-white px-10 py-6 rounded-xl shadow-md text-center w-full max-w-md mx-auto">
    <h2 class="text-3xl font-bold text-red-900">Register</h2>
    <p class="text-orange-300 mt-2">Create your account</p>
    
    <%= form_with model: @user, url: users_path, local: true, class: "mt-4 space-y-4" do |form| %>
      <div class="mb-4">
        <%= form.label :first_name, class: "block text-gray-700 font-semibold" %>
        <%= form.text_field :first_name, class: "w-full p-2 border rounded focus:outline-none focus:ring-2 focus:ring-red-900", required: true %>
      </div>
      <div class="mb-4">
        <%= form.label :last_name, class: "block text-gray-700 font-semibold" %>
        <%= form.text_field :last_name, class: "w-full p-2 border rounded focus:outline-none focus:ring-2 focus:ring-red-900", required: true %>
      </div>
      <div class="mb-4">
        <%= form.label :email_address, class: "block text-gray-700 font-semibold" %>
        <%= form.email_field :email_address, class: "w-full p-2 border rounded focus:outline-none focus:ring-2 focus:ring-red-900", required: true %>
      </div>
      <div class="mb-4 relative">
        <%= form.label :password, class: "block text-gray-700 font-semibold" %>
        <%= form.password_field :password, id: "password", class: "w-full p-2 border rounded focus:outline-none focus:ring-2 focus:ring-red-900", required: true %>
        <span class="absolute right-3 top-10 cursor-pointer" onclick="togglePassword(event, 'password', this)">
          <svg id="eye-icon-password" class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
          </svg>
        </span>
      </div>
      <div class="mb-4 relative">
        <%= form.label :password_confirmation, "Password Confirmation", class: "block text-gray-700 font-semibold" %>
        <%= form.password_field :password_confirmation, id: "password_confirmation", class: "w-full p-2 border rounded focus:outline-none focus:ring-2 focus:ring-red-900", required: true %>
        <span class="absolute right-3 top-10 cursor-pointer" onclick="togglePassword(event, 'password_confirmation', this)">
          <svg id="eye-icon-password_confirmation" class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
          </svg>
        </span>
      </div>
      <%= form.submit "Register", class: "w-full bg-red-900 text-white py-2 px-4 rounded hover:bg-red-700 transition-colors" %>
    <% end %>
    
    <% if @user.errors.any? %>
      <div class="text-red-500 mt-2">
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
    <p class="text-gray-700 mt-4">Already have an account? <%= link_to "Sign in here", new_session_path, class: "text-red-900 underline" %></p>
  </div>
</div>

<script>
  function togglePassword(event, fieldId, iconSpan) {
    event.preventDefault();
    const field = document.getElementById(fieldId);
    const icon = iconSpan.querySelector('svg');
    if (field.type === 'password') {
      field.type = 'text';
      icon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.542-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.542 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21" />';
    } else {
      field.type = 'password';
      icon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>';
    }
    field.focus();
  }
</script>