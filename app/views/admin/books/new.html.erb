<div class="max-w-7xl mx-auto px-4 py-6">
  <h2 class="text-3xl font-bold text-red-900 text-center mb-6">Add New Book</h2>

  <%= form_with(model: @book, url: admin_books_path, local: true, class: "flex flex-col gap-4 max-w-lg mx-auto") do |form| %>
    <% if @book.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg mb-4">
        <h3 class="font-semibold"><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h3>
        <ul class="list-disc list-inside">
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :title, class: "text-gray-700 font-semibold" %>
      <%= form.text_field :title, class: "p-3 border rounded-lg w-full focus:outline-none focus:ring-2 focus:ring-red-900 shadow-sm" %>
    </div>

    <div class="field">
      <%= form.label :author_id, "Author", class: "text-gray-700 font-semibold" %>
      <%= form.collection_select :author_id, @authors, :id, :name, { prompt: "Select an author" }, class: "p-3 border rounded-lg w-full focus:outline-none focus:ring-2 focus:ring-red-900 shadow-sm" %>
    </div>

    <div class="field">
      <%= form.label :genre_id, "Genre", class: "text-gray-700 font-semibold" %>
      <%= form.collection_select :genre_id, @genres, :id, :name, { prompt: "Select a genre" }, class: "p-3 border rounded-lg w-full focus:outline-none focus:ring-2 focus:ring-red-900 shadow-sm" %>
    </div>

    <div class="field">
      <%= form.label :price, class: "text-gray-700 font-semibold" %>
      <%= form.number_field :price, step: 0.01, class: "p-3 border rounded-lg w-full focus:outline-none focus:ring-2 focus:ring-red-900 shadow-sm" %>
    </div>

    <div class="field">
      <%= form.label :stock, class: "text-gray-700 font-semibold" %>
      <%= form.number_field :stock, class: "p-3 border rounded-lg w-full focus:outline-none focus:ring-2 focus:ring-red-900 shadow-sm" %>
    </div>

    <div class="field">
      <%= form.label :description, class: "text-gray-700 font-semibold" %>
      <%= form.text_area :description, rows: 4, class: "p-3 border rounded-lg w-full focus:outline-none focus:ring-2 focus:ring-red-900 shadow-sm" %>
    </div>

    <div class="field">
      <%= form.label :image_url, class: "text-gray-700 font-semibold" %>
      <%= form.text_field :image_url, class: "p-3 border rounded-lg w-full focus:outline-none focus:ring-2 focus:ring-red-900 shadow-sm" %>
    </div>

    <div class="actions flex gap-4">
      <%= form.submit "Add Book", class: "bg-red-900 text-white py-3 px-6 rounded-lg hover:bg-red-700 transition duration-200" %>
      <%= link_to "Cancel", admin_path, class: "bg-gray-600 text-white py-3 px-6 rounded-lg hover:bg-gray-700 transition duration-200" %>
    </div>
  <% end %>
</div>