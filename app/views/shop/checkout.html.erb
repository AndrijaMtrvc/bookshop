<div class="bg-gradient-to-r from-orange-100 to-orange-200 min-h-screen flex flex-col">
  <div class="max-w-7xl mx-auto px-4 py-8 w-full">
    <h2 class="text-4xl font-bold text-red-900 text-center mb-6">Checkout</h2>
    
    <div class="bg-white rounded-xl shadow-lg p-6 max-w-lg mx-auto">
      <%= form_with url: complete_checkout_shop_index_path, method: :post, local: true do |form| %>
        <div class="mb-4">
          <%= form.label :email, "Email Address", class: "block text-gray-700 font-semibold mb-2" %>
          <%= form.email_field :email, required: true, class: "w-full p-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-red-900" %>
        </div>
        
        <div class="mb-4">
          <%= form.label :phone_number, "Phone Number", class: "block text-gray-700 font-semibold mb-2" %>
          <%= form.telephone_field :phone_number, required: true, class: "w-full p-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-red-900" %>
        </div>
        
        <div class="mb-4">
          <%= form.label :address, "Shipping Address", class: "block text-gray-700 font-semibold mb-2" %>
          <%= form.text_area :address, required: true, rows: 4, class: "w-full p-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-red-900" %>
        </div>
        
        <div class="text-center">
          <%= form.submit "Complete Order", class: "bg-red-900 text-white py-3 px-6 rounded-lg hover:bg-red-700 transition duration-200" %>
        </div>
      <% end %>
    </div>
    
    <div class="mt-4 text-center">
      <%= link_to "Back to Cart", cart_shop_index_path, class: "text-red-900 underline hover:text-red-700" %>
    </div>
  </div>
</div>