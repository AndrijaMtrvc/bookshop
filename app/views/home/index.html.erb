<div class="min-h-screen flex flex-col items-center justify-center">
  <div class="bg-white rounded-xl shadow-lg py-20 px-16 max-w-lg w-auto min-w-[0] text-center mx-4 md:mx-8">
    <h1 class="text-6xl font-bold text-red-900 mb-4 whitespace-nowrap" style="font-size: 3.5rem;">Read whenever, wherever you are</h1>
    <p>
      <%= link_to "Let's go shopping!", shop_index_path, class: "text-3xl text-red-900 font-semibold hover:text-red-700 transition duration-200", style: "font-size: 1.5rem;" %>
    </p>
  </div>
</div>

<!-- Best of the Week Sekcija -->
<div class="py-12">
  <h2 class="text-4xl font-bold text-red-900 text-center mb-8">Best of the Week</h2>
  <div class="max-w-7xl mx-auto px-4">
    <div class="flex flex-row gap-6 justify-center">
      <% @best_of_the_week.each do |book| %>
        <%= link_to shop_path(book), class: "block" do %>
          <div class="bg-white rounded-xl shadow-lg p-6 flex flex-col items-center transition-all duration-300 hover:shadow-xl hover:scale-105 w-[300px] h-[480px]">
            <div class="w-36 h-64 overflow-hidden rounded-lg mb-4 shadow-md">
              <% if book.image_url.present? %>
                <%= image_tag book.image_url, class: "w-full h-full object-cover object-center", alt: book.title || "Book image" %>
              <% else %>
                <div class="w-full h-full bg-gray-200 flex items-center justify-center text-gray-500 text-sm">No Image</div>
              <% end %>
            </div>
            <h4 class="text-lg font-semibold text-gray-800 text-center h-16 line-clamp-3 overflow-hidden"><%= book.title.present? ? book.title : "Untitled Book" %></h4>
            <p class="text-gray-600 text-sm h-8 line-clamp-2 overflow-hidden mt-2">by <%= book.author.present? ? book.author : "Unknown Author" %></p>
            <p class="text-gray-500 text-xs italic h-6 line-clamp-1 overflow-hidden mt-2">Genre: <%= book.genre.present? ? book.genre : "Unknown Genre" %></p>
            <p class="text-red-900 font-bold text-md mt-auto pt-4">$<%= book.price.present? ? book.price : "N/A" %></p>
          </div>
        <% end %>
      <% end %>
    </div>
    <% if @best_of_the_week.empty? %>
      <p class="text-center text-gray-700 mt-10 text-lg">No books available at the moment.</p>
    <% end %>
  </div>
</div>

<!-- Author of the Week Sekcija -->
<div class="py-12">
  <h2 class="text-4xl font-bold text-red-900 text-center mb-8">Author of the Week</h2>
  <div class="max-w-7xl mx-auto px-4">
    <% if @author_of_the_week && @author_book %>
      <div class="flex flex-col items-center">
        <h3 class="text-2xl font-semibold text-gray-800 mb-4"><%= @author_of_the_week %></h3>
        <%= link_to shop_path(@author_book), class: "block" do %>
          <div class="bg-white rounded-xl shadow-lg p-6 flex flex-col items-center transition-all duration-300 hover:shadow-xl hover:scale-105 w-[300px] h-[480px]">
            <div class="w-36 h-64 overflow-hidden rounded-lg mb-4 shadow-md">
              <% if @author_book.image_url.present? %>
                <%= image_tag @author_book.image_url, class: "w-full h-full object-cover object-center", alt: @author_book.title || "Book image" %>
              <% else %>
                <div class="w-full h-full bg-gray-200 flex items-center justify-center text-gray-500 text-sm">No Image</div>
              <% end %>
            </div>
            <h4 class="text-lg font-semibold text-gray-800 text-center h-16 line-clamp-3 overflow-hidden"><%= @author_book.title.present? ? @author_book.title : "Untitled Book" %></h4>
            <p class="text-gray-600 text-sm h-8 line-clamp-2 overflow-hidden mt-2">by <%= @author_book.author.present? ? @author_book.author : "Unknown Author" %></p>
            <p class="text-gray-500 text-xs italic h-6 line-clamp-1 overflow-hidden mt-2">Genre: <%= @author_book.genre.present? ? @author_book.genre : "Unknown Genre" %></p>
            <p class="text-red-900 font-bold text-md mt-auto pt-4">$<%= @author_book.price.present? ? @author_book.price : "N/A" %></p>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-center text-gray-700 mt-10 text-lg">No author or book available at the moment.</p>
    <% end %>
  </div>
</div>